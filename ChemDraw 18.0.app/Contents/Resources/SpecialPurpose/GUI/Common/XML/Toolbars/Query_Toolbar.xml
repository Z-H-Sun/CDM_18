<?xml version="1.0" encoding="UTF-8"?>
<ToolbarGroup xmlns="http://www.cambridgesoft.com/software/ChemDraw/gui"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.cambridgesoft.com/software/ChemDraw/gui ToolBar.xsd">
    <Toolbar uniqueID="QueryToolBarID" preferenceKey="Query" columns="3" rows="2"
        defaultOrientation="horizontal" hideOnApplicationSwitch="true" menuLocation="otherMenu">
        <Title localizationName="QueryToolbarTitle">Query</Title>
        <TextMenuItem>
            <Title localizationName="QueryToolbarMenuItem">Query Tools</Title>
        </TextMenuItem>
        <Tooltip localizationName="QueryToolbarToolTip">Query Tools</Tooltip>
        <Button buttonStyle="toggle" row="1" column="1" titleMode="hidden" uniqueID="QueryButtonID_ReactionAtomAtomMap">
            <Graphic sharedGraphic="Query_ReactAtomAtomMap"/>
            <Command command="chooseQueryTool_ReactionAtomAtomMap"/>
        </Button>
        <Button buttonStyle="toggle" row="2" column="1" titleMode="hidden" uniqueID="QueryButtonID_AlternativeGroup">
            <Graphic sharedGraphic="Query_AlternativeGroup"/>
            <Command command="chooseQueryTool_AlternativeGroup"/>
        </Button>
        <Button buttonStyle="toggle" row="1" column="2" titleMode="hidden" uniqueID="QueryButtonID_FreeSite">
            <Graphic sharedGraphic="Query_FreeSite"/>
            <Command command="chooseQueryTool_FreeSite"/>
        </Button>
        <Button buttonStyle="toggle" row="2" column="2" titleMode="hidden" uniqueID="QueryButtonID_AbsoluteStereochemistry">
            <Graphic sharedGraphic="Query_AbsoluteStereo"/>
            <Command command="chooseQueryTool_AbsoluteStereochemistry"/>
        </Button>
        <Button buttonStyle="toggle" row="1" column="3" titleMode="hidden" uniqueID="QueryButtonID_RacemicStereochemistry">
            <Graphic sharedGraphic="Query_RacemicStereo"/>
            <Command command="chooseQueryTool_RacemicStereochemistry"/>
        </Button>
        <Button buttonStyle="toggle" row="2" column="3" titleMode="hidden" uniqueID="QueryButtonID_RelativeStereochemistry">
            <Graphic sharedGraphic="Query_RelativeStereo"/>
            <Command command="chooseQueryTool_RelativeStereochemistry"/>
        </Button>
    </Toolbar>
</ToolbarGroup>
