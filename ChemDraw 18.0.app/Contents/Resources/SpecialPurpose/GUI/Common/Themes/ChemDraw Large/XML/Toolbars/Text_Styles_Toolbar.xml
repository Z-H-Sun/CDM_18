<?xml version="1.0" encoding="UTF-8"?>
<ToolbarGroup xmlns="http://www.cambridgesoft.com/software/ChemDraw/gui"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.cambridgesoft.com/software/ChemDraw/gui ToolBar.xsd">
    <Toolbar uniqueID="TextStylesToolBarID" defaultDockedLocation="topCenter" preferenceKey="Style"
        columns="16" rows="1" rowsVertical="13"
        defaultOrientation="horizontal" hideOnApplicationSwitch="true">
        <Title localizationName="TextStyleToolbarTitle">Style</Title>
        <TextMenuItem>
            <Title localizationName="TextStyleMenuItemTitle">Show Style Toolbar</Title>
        </TextMenuItem>
        <Tooltip localizationName="TextStyleToolbarToolTip">Text font and alignment</Tooltip>
        <Button buttonStyle="menu" buttonStyleVertical="push" column="1" row="1" width="3"
            rowVertical="1" heightVertical="1" titleMode="hidden" uniqueID="FontFaceMenuID">
            <Title localizationName="FontFaceMenuTitle" textSource="currentFontFace"/>
            <Graphic sharedGraphic="Text_FontFace"/>
            <Command command="chooseFontFace"/>
            <Menu sharedMenu="FontFaceMenuID"/>
        </Button>
        <Button buttonStyle="menu" buttonStyleVertical="push" column="4" row="1" width="2"
            rowVertical="2" heightVertical="1" titleMode="hidden" uniqueID="FontSizeMenuID">
            <Title localizationName="FontFaceMenuTitle" textSource="currentFontSize"/>
            <Graphic sharedGraphic="Text_Size"/>
            <Command command="chooseFontSize"/>
            <Menu sharedMenu="FontSizeMenuID"/>
        </Button>
        <Button uniqueID="AlignTextLeftID" row="1" column="6" rowVertical="3" buttonStyle="toggle">
            <Graphic sharedGraphic="Text_AlignLeft"/>
            <Command command="textAlignLeft"/>
        </Button>
        <Button uniqueID="AlignTextCenterID" row="1" column="7" rowVertical="4" buttonStyle="toggle">
            <Graphic sharedGraphic="Text_AlignCenter"/>
            <Command command="textAlignCenter"/>
        </Button>
        <Button uniqueID="AlignTextRightID" row="1" column="8" rowVertical="5" buttonStyle="toggle">
            <Graphic sharedGraphic="Text_AlignRight"/>
            <Command command="textAlignRight"/>
        </Button>
        <Button uniqueID="AlignTextJustifiedID" row="1" column="9" rowVertical="6" buttonStyle="toggle">
            <Graphic sharedGraphic="Text_AlignFull"/>
            <Command command="textAlignFull"/>
        </Button>
        <Button uniqueID="TextFaceBoldButtonID" row="1" column="10" rowVertical="7" buttonStyle="toggle">
            <Graphic sharedGraphic="Text_StyleBold"/>
            <Command command="textStyleBold"/>
        </Button>
        <Button uniqueID="TextFaceItalicButtonID" row="1" column="11" rowVertical="8" buttonStyle="toggle">
            <Graphic sharedGraphic="Text_StyleItalic"/>
            <Command command="textStyleItal"/>
        </Button>
        <Button uniqueID="TextFaceUnderlinedButtonID" row="1" column="12" rowVertical="9" buttonStyle="toggle">
            <Graphic sharedGraphic="Text_StyleUnderlined"/>
            <Command command="textStyleUnderline"/>
        </Button>
        <Button uniqueID="TextStyleFormulaButtonID" row="1" column="13" rowVertical="10" buttonStyle="toggle">
            <Graphic sharedGraphic="Text_StyleFormula"/>
            <Command command="textStyleFormula"/>
        </Button>
        <Button uniqueID="TextStyleSubcriptButtonID" row="1" column="14" rowVertical="11" buttonStyle="toggle">
            <Graphic sharedGraphic="Text_StyleSubscript"/>
            <Command command="textStyleSubscript"/>
        </Button>
        <Button uniqueID="TextStyleSuperScriptButtonID" row="1" column="15" rowVertical="12" buttonStyle="toggle">
            <Graphic sharedGraphic="Text_StyleSuperscript"/>
            <Command command="textStyleSuperscript"/>
        </Button>
        <Button imageSource="currentColor" buttonStyle="subToolbar" column="16" rowVertical="13"
            row="1" subToolbarID="ColorPickerToolbarID" width="1" titleMode="hidden" uniqueID="FontColorMenu">
            <Graphic sharedGraphic="Text_Default_Color_Block"/>
            <Command command="showColorPopup"/>
        </Button>
        <Separator uniqueID="ObjectSeparator1" row="1" column="6" rowVertical="3"/>
        <Separator uniqueID="ObjectSeparator2" row="1" column="10" rowVertical="7"/>
        <Separator uniqueID="ObjectSeparator3" row="1" column="13" rowVertical="10"/>
        <Separator uniqueID="ObjectSeparator4" row="1" column="16" rowVertical="13"/>
    </Toolbar>
    
</ToolbarGroup>
